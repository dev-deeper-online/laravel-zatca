{
    "name": "dev-deeper-online/laravel-zatca",
    "description": "An unofficial Laravel package for generating ZATCA e-invoices, QR Codes, and submitting e-invoices to ZATCA's servers.",
    "keywords": [
        "DevDeeper",
        "laravel",
        "laravel-zatca",
        "zatca",
        "e-invoice"
    ],
    "homepage": "https://github.com/dev-deeper-online/laravel-zatca",
    "license": "MIT",
    "authors": [
        {
            "name": "DevDeeper",
            "email": "developers@devdeeper.online",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.0",
        "spatie/laravel-package-tools": "^1.12|^1.16",
        "illuminate/contracts": "^8.0|^9.0|^10.0|^11.0",
        "ext-openssl": "*"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.1.1||^7.10.0",
        "orchestra/testbench": "^9.0.0||^8.22.0||^6.45.0||^7.43.0",
        "phpunit/phpunit": "^10.5.17||^9.6.20"
    },
    "autoload": {
        "psr-4": {
            "DevDeeper\\ZATCA\\": "src/",
            "DevDeeper\\ZATCA\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DevDeeper\\ZATCA\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "clear": "@php vendor/bin/testbench package:purge-laravel-zatca --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": [
            "@composer run prepare",
            "@php vendor/bin/testbench workbench:build --ansi"
        ],
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "@composer run build",
            "@php vendor/bin/testbench serve"
        ],
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "DevDeeper\\ZATCA\\ZATCAServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}

{
    "name": "dev-deeper-online/laravel-zatca",
    "description": "An unofficial Laravel package for generating ZATCA e-invoices, QR Codes, and submitting e-invoices to ZATCA's servers.",
    "keywords": [
        "DevDeeper",
        "laravel",
        "laravel-zatca",
        "zatca",
        "e-invoice"
    ],
    "homepage": "https://github.com/dev-deeper-online/laravel-zatca",
    "license": "MIT",
    "authors": [
        {
            "name": "DevDeeper",
            "email": "developers@devdeeper.online",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "spatie/laravel-package-tools": "^1.12|^1.16",
        "illuminate/contracts": "^8.0|^9.0|^10.0|^11.0",
        "ext-openssl": "*"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.1.1||^7.10.0",
        "larastan/larastan": "^2.9",
        "orchestra/testbench": "^9.0.0||^8.22.0||^6.45.0||^7.43.0",
        "pestphp/pest": "^2.34",
        "pestphp/pest-plugin-arch": "^2.7",
        "pestphp/pest-plugin-laravel": "^2.3",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "phpstan/phpstan-phpunit": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "DevDeeper\\ZATCA\\": "src/",
            "DevDeeper\\ZATCA\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DevDeeper\\ZATCA\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "clear": "@php vendor/bin/testbench package:purge-laravel-zatca --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": [
            "@composer run prepare",
            "@php vendor/bin/testbench workbench:build --ansi"
        ],
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "@composer run build",
            "@php vendor/bin/testbench serve"
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "DevDeeper\\ZATCA\\ZATCAServiceProvider"
            ],
            "aliases": {
                "ZATCA": "DevDeeper\\ZATCA\\Facades\\ZATCA"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
